def fuel_tank(starting_point, ending_point, car_millege, tank_capacity):
    fuel_consumed = (ending_point - starting_point) / car_millege
    stop_for_fuel = fuel_consumed / tank_capacity
    if stop_for_fuel < 1:
        print("no need to stop for refueling")
    else:
        return stop_for_fuel
    

x = fuel_tank(int(input("enter starting point\n")), int(input("enter ending point\n")), int(input("enter your car millege\n")), int(input("enter your car tank capacity\n")))
print("number of stops for refueling = ", x)
