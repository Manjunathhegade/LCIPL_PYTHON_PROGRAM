lst = []
count1 = 0
count2 = 0
count3 = 0
while True:
    number = int(input("enter your number\n"))
    if number == 0:
        break
   
    lst.append(number)
    if number > 0 and number  < 10:
        count1 = count1 + 1
    if number > 9 and number < 100:
        count2 = count2 + 1
    if number > 99 and number < 1000:
        count3 = count3 + 1

print("largest number is ",max(lst))
print("smallest number is ",min(lst))
print("single digits are", count1)
print("double digits are", count2)
print("three digits are", count3)
